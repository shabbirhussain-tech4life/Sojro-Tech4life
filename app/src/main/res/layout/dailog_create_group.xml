<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dailog_inset"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="0dp"
        android:animateLayoutChanges="true">

    <TextView
            android:text="1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/textView44"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/rounded_green_bg"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toLeftOf="@+id/textView50"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    <TextView
            android:text="2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/rounded_blue_bg"
            android:id="@+id/textView50"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textView44"/>

    <TextView
            android:text="Create Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView47"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView44"
            app:layout_constraintLeft_toLeftOf="@+id/textView44"
            app:layout_constraintRight_toRightOf="@+id/textView44"
            android:textSize="12sp"/>

    <TextView
            android:text="Add members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView49"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView50"
            app:layout_constraintRight_toRightOf="@+id/textView50"
            app:layout_constraintLeft_toLeftOf="@+id/textView50"
            android:textSize="12sp"/>




    <include

            layout="@layout/include_dailog_create_group_item1"
            android:id="@+id/item_1"
            android:layout_marginTop="0dp"
            android:layout_width="0dp"
            android:visibility="visible"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView47"/>


    <include
            layout="@layout/include_dailog_create_group_item2"
            android:id="@+id/item_2"
            android:layout_marginTop="0dp"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView47"/>




</androidx.constraintlayout.widget.ConstraintLayout>
