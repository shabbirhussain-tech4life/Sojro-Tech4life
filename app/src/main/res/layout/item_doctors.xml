<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/snow_white">





    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground">

        <TextView
                android:text="logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:id="@+id/logo"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:textSize="27sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:maxLength="1"
                android:background="@drawable/circle_blue_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="0dp"
                app:layout_constraintVertical_bias="0.555"/>

        <TextView
                android:text="John Doe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@+id/logo"
                android:layout_marginLeft="16dp"
                app:layout_constraintRight_toLeftOf="@+id/textView7"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:text="Patient ID : SHHR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_type"
                app:layout_constraintLeft_toRightOf="@+id/logo"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_name"
                app:layout_constraintRight_toLeftOf="@+id/imageView"
                android:layout_marginRight="16dp"
                android:textColor="@color/dark_grey"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:text="This is a  test case and only created for demostraion purpose."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_location"
                android:textColor="@color/light_grey"
                app:layout_constraintLeft_toRightOf="@+id/logo"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_type"
                app:layout_constraintRight_toLeftOf="@+id/imageView"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>

        <TextView
                android:text="06:45 PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_marginRight="8dp"
                android:textColor="@color/bright_green"
                android:textSize="11sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_name"/>

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/arrow"
                android:id="@+id/imageView"
                android:layout_marginRight="8dp"
                android:tint="@color/dark_grey"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
