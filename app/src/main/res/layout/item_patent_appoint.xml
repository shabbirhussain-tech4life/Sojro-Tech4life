<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:layout_margin="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/snow_white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:id="@+id/item_main"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:text="Referred by:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reffer_txt"
            android:visibility="visible"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/patient_name"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:text="John Doe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/referrer_name"
            android:textColor="@color/bright_green"
            app:layout_constraintLeft_toRightOf="@+id/reffer_txt"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/reffer_txt"/>


        <TextView
            android:text="Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_type"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/reffer_txt"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
            android:text="Time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_type"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="1.0"/>

        <TextView
            android:text="4 Jun 2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_date"
            android:textColor="@color/normal_grey"
            app:layout_constraintLeft_toRightOf="@+id/txt_type"
            android:layout_marginLeft="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_type"/>

        <TextView
            android:text="10:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_time"
            android:textColor="@color/normal_grey"
            app:layout_constraintLeft_toRightOf="@+id/textView8"
            android:layout_marginLeft="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"/>



        <TextView
            android:text="View case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_view_case"
            android:background="@drawable/rounded_purple_bg"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/case_code"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:text="status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_status"
            android:padding="5dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/btn_view_case"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/play"
            android:id="@+id/video_icon"
            app:layout_constraintTop_toBottomOf="@+id/txt_status"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/patient_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:text="111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/case_code"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:text="ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            app:layout_constraintRight_toLeftOf="@+id/case_code"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
