<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardElevation="4dp"
  android:layout_marginTop="5dp"
  android:layout_marginBottom="10dp"
  app:cardPreventCornerOverlap="true"
  app:cardCornerRadius="4dp"
  app:cardBackgroundColor="@color/snow_white">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp"
    android:layout_marginBottom="10dp">

    <TextView

      android:text="Status:"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/dark_grey"
      android:textStyle="bold"
      android:id="@+id/textView10"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginLeft="16dp"
      app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView

      tools:text="John Doe"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/txt_status"
      android:textSize="16sp"
      android:textColor="@color/dark_grey"
      app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
      app:layout_constraintLeft_toRightOf="@+id/textView10"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"/>

    <TextView
      android:visibility="gone"
      android:text="Date:"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/dark_grey"
      android:textStyle="bold"
      android:id="@+id/textView19"
      app:layout_constraintTop_toBottomOf="@+id/textView10"
      android:layout_marginLeft="16dp"
      app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
      android:visibility="gone"
      tools:text="John Doe"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/txt_date"
      android:textSize="16sp"
      android:textColor="@color/dark_grey"
      app:layout_constraintBaseline_toBaselineOf="@+id/textView19"
      app:layout_constraintLeft_toRightOf="@+id/textView19"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"/>


    <TextView
      android:visibility="gone"
      android:text="Medicine:"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/dark_grey"
      android:textStyle="bold"
      android:id="@+id/textView18"
      app:layout_constraintTop_toBottomOf="@+id/textView19"
      android:layout_marginLeft="16dp"
      app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
      android:visibility="gone"
      tools:text="John Doe"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/txt_diagnosis"
      android:textSize="16sp"
      android:textColor="@color/dark_grey"
      app:layout_constraintBaseline_toBaselineOf="@+id/textView18"
      app:layout_constraintLeft_toRightOf="@+id/textView18"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="8dp"/>


    <TextView
      android:visibility="gone"
      android:text="Dose:"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/dark_grey"
      android:textStyle="bold"
      android:id="@+id/textView11"
      app:layout_constraintTop_toBottomOf="@+id/textView18"
      android:layout_marginLeft="16dp"
      app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
      android:visibility="gone"
      android:id="@+id/txt_preg"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:textColor="@color/dark_grey"
      android:textSize="16sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/textView11"
      app:layout_constraintLeft_toRightOf="@+id/textView11"
      app:layout_constraintTop_toBottomOf="@+id/txt_diagnosis"
      tools:text="John Doe" />

    <TextView
      android:visibility="gone"
      android:text="Route:"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/dark_grey"
      android:textStyle="bold"
      android:id="@+id/textView12"
      app:layout_constraintTop_toBottomOf="@+id/textView11"
      android:layout_marginLeft="16dp"
      app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
      android:visibility="gone"
      android:id="@+id/txt_instruction"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:textColor="@color/dark_grey"
      android:textSize="16sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
      app:layout_constraintLeft_toRightOf="@+id/textView12"
      app:layout_constraintTop_toBottomOf="@+id/txt_preg"
      tools:text="John Doe" />


    <TextView
      android:visibility="gone"
      android:text="Frequency:"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/dark_grey"
      android:textStyle="bold"
      android:id="@+id/textView14"
      app:layout_constraintTop_toBottomOf="@+id/textView12"
      android:layout_marginLeft="16dp"
      app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
      android:visibility="gone"
      android:id="@+id/txt_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:textColor="@color/dark_grey"
      android:textSize="16sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
      app:layout_constraintLeft_toRightOf="@+id/textView14"
      app:layout_constraintTop_toBottomOf="@+id/txt_instruction"
      tools:text="John Doe" />

    <TextView
      android:visibility="gone"
      android:text="Duration:"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textView16"
      android:textColor="@color/dark_grey"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@+id/textView14"
      android:layout_marginLeft="16dp"
      app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
      android:visibility="gone"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/txt_comment"
      android:textSize="16sp"
      android:layout_marginLeft="8dp"
      app:layout_constraintBaseline_toBaselineOf="@+id/textView16"
      app:layout_constraintHorizontal_bias="0.11"
      app:layout_constraintLeft_toRightOf="@+id/textView16"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt_name"
      android:layout_marginRight="8dp" />

    <TextView
      android:visibility="gone"
      android:text="Comments:"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textView17"
      android:textColor="@color/dark_grey"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@+id/textView16"
      android:layout_marginLeft="16dp"
      android:paddingBottom="10dp"
      app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
      android:visibility="gone"
      tools:text="comment"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/txt_ins"
      android:layout_marginLeft="8dp"
      app:layout_constraintBaseline_toBaselineOf="@+id/textView17"
      app:layout_constraintHorizontal_bias="0.11"
      app:layout_constraintLeft_toRightOf="@+id/textView17"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt_comment"
      android:layout_marginRight="8dp" />
    <TextView
      android:layout_marginTop="10dp"
      android:paddingLeft="16dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/textView10"
      android:id="@+id/textarea"/>
    <Button
      android:layout_marginTop="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="View PDF"
      android:textAllCaps="false"
      android:textColor="@color/black"
      android:background="@color/orange"
      android:layout_toRightOf="@+id/send_prescription"
      android:layout_toEndOf="@+id/send_prescription"
      android:id="@+id/view_labimage"
      app:layout_constraintTop_toBottomOf="@+id/textarea"
      android:layout_marginLeft="16dp"
      app:layout_constraintLeft_toLeftOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
