<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/snow_white">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:id="@+id/item_main"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobile"
                android:textColor="@color/light_grey"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_type"
                app:layout_constraintLeft_toRightOf="@+id/txt_type"
                android:layout_marginLeft="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:textColor="@color/light_grey"
                app:layout_constraintLeft_toRightOf="@+id/textView28"
                android:layout_marginLeft="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView28"/>

        <TextView
                android:text="Mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_type"
                android:textColor="@color/dark_grey"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView27"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:textColor="@color/dark_grey"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_type"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
                android:text="Full Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:textColor="@color/dark_grey"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:id="@+id/profile_image"-->
                <!--android:src="@drawable/dummy2"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="100dp"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:foreground="?selectableItemBackground"-->
                <!--app:civ_border_width="2dp"-->
                <!--app:civ_border_overlay="true"-->
                <!--android:visibility="gone"-->
                <!--app:civ_border_color="@color/white"-->
                <!--tools:layout_editor_absoluteY="0dp"-->
                <!--tools:layout_editor_absoluteX="187dp"/>-->

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textColor="@color/light_grey"
                app:layout_constraintLeft_toRightOf="@+id/textView27"
                android:layout_marginLeft="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView27"/>

        <TextView
                android:text="Relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView28"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_relationship"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView23"
                app:layout_constraintLeft_toRightOf="@+id/textView23"
                android:layout_marginLeft="8dp"/>

        <TextView
                android:text="Share Info On"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView37"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/textView23"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_share_option"
                app:layout_constraintLeft_toRightOf="@+id/textView37"
                android:layout_marginLeft="11dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView37"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
