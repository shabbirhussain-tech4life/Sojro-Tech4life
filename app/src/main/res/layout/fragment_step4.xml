<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/book_slot"
    android:background="@color/very_light_grey">


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/months_list">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jan"
                android:text="Jan"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>


            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/feb"
                android:text="Feb"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>


            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mar"
                android:text="Mar"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>


            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/apr"
                android:text="Apr"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>

            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May"
                android:id="@+id/may"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>


            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June"
                android:id="@+id/june"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>


            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July"
                android:id="@+id/july"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>

            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug"
                android:id="@+id/aug"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>

            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sep"
                android:id="@+id/sep"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>


            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct"
                android:id="@+id/oct"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>

            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nov"
                android:id="@+id/nov"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>


            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec"
                android:id="@+id/dec"
                android:padding="20dp"
                android:background="@drawable/checked_white_blue_bg"
                android:textColor="@color/button_dark_text"/>


        </LinearLayout>



    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/listofitems"-->

            <!--android:text="initial"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/months_list">

        <ScrollView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:padding="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/date_slot">




            </LinearLayout>



        </ScrollView>


        <ScrollView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:padding="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/timeslot">




            </LinearLayout>





        </ScrollView>





    </LinearLayout>






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_dates_view"
        android:text="No Slots Available"
        android:layout_centerInParent="true"
        android:visibility="gone"

        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an appointment"
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:background="@color/orange"
        android:textColor="@color/black"/>



</RelativeLayout>
