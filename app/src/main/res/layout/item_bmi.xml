<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:layout_margin="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/snow_white"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:id="@+id/item_main"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical">

        <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_type"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:textColor="@color/light_grey"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_type"
            app:layout_constraintLeft_toRightOf="@+id/txt_type"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_type"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:textColor="@color/light_grey"
            app:layout_constraintLeft_toRightOf="@+id/textView28"
            android:layout_marginLeft="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView28"/>


        <TextView
            android:text="Height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView28"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_height"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView23"
            app:layout_constraintLeft_toRightOf="@+id/textView23"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:text="Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView23"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_weight"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView24"
            app:layout_constraintLeft_toRightOf="@+id/textView24"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:text="Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_calculate"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView25"
            app:layout_constraintLeft_toRightOf="@+id/textView25"
            android:layout_marginLeft="8dp"/>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            android:visibility="visible"
            android:id="@+id/action_items">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_delete_black_24dp"
                android:id="@+id/btn_delete"
                android:layout_marginTop="8dp"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                android:id="@+id/btn_edit" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_visibility_black_24dp"
                android:id="@+id/view_exercise" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
