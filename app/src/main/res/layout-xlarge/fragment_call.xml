    <!--</LinearLayout>-->




        <ImageButton
            android:layout_marginLeft="25dp"

            android:id="@+id/button_call_switch_camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_switch_camera"
            android:contentDescription="@string/switch_camera" />

        <ImageButton
            android:id="@+id/button_call_disconnect"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_end_call"
            android:contentDescription="@string/disconnect_call"

         android:layout_marginLeft="225dp"
            />


        <ImageButton
            android:id="@+id/button_bluetooth_connect"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="475dp"




            android:background="@drawable/ic_bluetooth"
            android:contentDescription="@string/connect_bluetooth_device" />


    <ImageButton
        android:id="@+id/button_call_toggle_mic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_mic_enable"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="700dp"
        android:layout_marginRight="25dp"
        android:contentDescription="@string/toggle_mic" />


</RelativeLayout>
